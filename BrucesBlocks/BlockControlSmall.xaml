<UserControl x:Class="BrucesBlocks.BlockControlSmall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Style="{DynamicResource BlockControlStyle}" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image Name="image" Grid.Column="0" Source="Images/blockPalette.png" VerticalAlignment="Center" />
        <StackPanel Grid.Column="1" Margin="2,0,4,0" VerticalAlignment="Center">
            <TextBlock Name="tb1" Text="Small" />
            <TextBlock Name="tb2" Text="Block" />
        </StackPanel>
    </Grid>
</UserControl>
